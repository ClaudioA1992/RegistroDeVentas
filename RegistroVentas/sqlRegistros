--------------------------------------------------------
--  DDL for Trigger REGISTROS_TRG
--------------------------------------------------------

  CREATE OR REPLACE TRIGGER "REGISTROSRV"."REGISTROS_TRG" 
BEFORE INSERT ON REGISTROS 
FOR EACH ROW 
BEGIN
  <<COLUMN_SEQUENCES>>
  BEGIN
    IF INSERTING AND :NEW.IDREGISTRO IS NULL THEN
      SELECT REGISTROS_SEQ.NEXTVAL INTO :NEW.IDREGISTRO FROM SYS.DUAL;
    END IF;
  END COLUMN_SEQUENCES;
END;
/
ALTER TRIGGER "REGISTROSRV"."REGISTROS_TRG" ENABLE;
--------------------------------------------------------
--  Constraints for Table REGISTROS
--------------------------------------------------------

  ALTER TABLE "REGISTROSRV"."REGISTROS" ADD PRIMARY KEY ("IDREGISTRO")
  USING INDEX PCTFREE 10 INITRANS 2 MAXTRANS 255 COMPUTE STATISTICS 
  STORAGE(INITIAL 65536 NEXT 1048576 MINEXTENTS 1 MAXEXTENTS 2147483645
  PCTINCREASE 0 FREELISTS 1 FREELIST GROUPS 1 BUFFER_POOL DEFAULT FLASH_CACHE DEFAULT CELL_FLASH_CACHE DEFAULT)
